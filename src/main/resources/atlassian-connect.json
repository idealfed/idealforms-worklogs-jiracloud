{
  "key": "${addon.key}",
  "baseUrl": "${addon.base-url}",
  "name": "Com Idealfed Forms",
  "authentication": {
    "type": "jwt"
  },
  "lifecycle": {
    "installed": "/installed",
    "uninstalled": "/uninstalled"
  },
  "scopes": [
    "READ",
    "WRITE",
    "DELETE",
    "ADMIN",
    "ACT_AS_USER"
  ],
  "modules": {
    "jiraSearchRequestViews": [
      {
        "url": "/run?formId=Worklog%20Report",
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ],
        "weight": 100,
        "name": {
          "value": "Ideal Worklogs"
        },
        "key": "ideal-worklogs-search"
      }
    ],
    "generalPages": [
      {
        "key": "ijf-page",
        "location": "system.top.navigation.bar",
        "name": {
          "value": "Ideal Forms"
        },
        "url": "/splash",
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ]
      },
      {
        "url": "/run?formId=Worklog%20Report",
        "conditions": [
          {
            "condition": "user_is_logged_in"
          }
        ],
        "weight": 100,
        "name": {
          "value": "Ideal Work"
        },
        "key": "ideal-worklogs-general"
      }
    ]
  }
}


